{
  "extends": [
    "stylelint-prettier/recommended",
    "stylelint-config-prettier",
    "stylelint-config-standard-scss"
  ],
  "rules": {
    "declaration-block-no-redundant-longhand-properties": [
      true,
      {
        "ignoreShorthands": ["grid-column", "grid-row"]
      }
    ],
    "function-name-case": [
      "lower",
      {
        "ignoreFunctions": ["/^[a-zA-Z0-9]+((_|-)[a-z0-9][a-zA-Z0-9]*)*(-[a-z0-9][a-zA-Z0-9]*)?$/"]
      }
    ],
    "scss/at-function-pattern": "^[a-zA-Z0-9]+((_|-)[a-z0-9][a-zA-Z0-9]*)*(-[a-z0-9][a-zA-Z0-9]*)?$",
    "scss/at-mixin-pattern": "^[a-zA-Z0-9]+((_|-)[a-z0-9][a-zA-Z0-9]*)*(-[a-z0-9][a-zA-Z0-9]*)?$",
    "scss/dollar-variable-pattern": "^[a-zA-Z0-9]+((_|-)[a-z0-9][a-zA-Z0-9]*)*(-[a-z0-9][a-zA-Z0-9]*)?$",
    "selector-class-pattern": "^[a-zA-Z0-9]+((_|-)[a-z0-9][a-zA-Z0-9]*)*$"
  }
}
