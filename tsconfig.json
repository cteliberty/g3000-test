{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src/",
    "paths": {
      "~site/*": ["app/[locale]/*"],
      "~lib/*": ["lib/*"],
      "~query/*": ["query/*"],
      "~type/*": ["type/*"],
      "~hooks/*": ["hooks/*"],
      "~atoms/*": ["components/atoms/*"],
      "~molecules/*": ["components/molecules/*"],
      "~organisms/*": ["components/organisms/*"],
      "~template/*": ["components/template/*"],
      "~page/*": ["components/page/*"],
      "~fragments/*": ["fragments/*"],
      "~navigation/*": ["navigation/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/.not-found.tsx", "src/app/.layout.tsx", "src/app/api/preview/route.js", "src/app/api/post-install.js", "src/app/api/exit-preview.js", "src/components/molecules/HeaderSite.txs"],
  "exclude": ["node_modules"]
}
